<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zdd.assistant">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- 引导展示页 -->
        <activity
            android:name=".activity.before.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 登录页面 -->
        <activity
            android:name=".activity.before.LoginActivity"
            android:theme="@style/AppTheme.FullScreen">
        </activity>

        <!-- 注册页面 -->
        <activity
            android:name=".activity.before.RegisterActivity"
            android:label="账号注册">
        </activity>

        <!-- 主界面 -->
        <activity
            android:name=".activity.main.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".activity.main.CookActivity"
            android:label="菜谱">
        </activity>
        <activity android:name=".activity.main.GuideActivity">
        </activity>
        <activity android:name=".activity.main.NotePadActivity">
        </activity>
        <activity android:name=".activity.main.RobotActivity"
            android:label="智能机器人">
        </activity>
    </application>

</manifest>